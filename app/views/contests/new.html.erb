<div class="row justify-content-md-center mt-5">
  <div>
    <h3>New Tournament</h3>
    <%= bootstrap_form_for(@contest) do |f| %>
      <%= f.text_field :title, hide_label: true, placeholder: "Name" %>
      <% @contest.teams.each.with_index(1) do |team, i| %>
        <%= f.fields_for :teams, team do |form| %>
          <%= form.text_field :title, hide_label: true, placeholder: "Team "+i.to_s %>
        <% end %>
      <% end %>
      <%= f.submit "Save", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>