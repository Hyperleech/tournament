<h2 class="text-center"><%= name %></h2>
<table class="table table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Team 1</th>
	  <th scope="col">Result</th>
	  <th scope="col">Team 2</th>
	  <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  	<% if stage.present? %>
		<% stage.games.each_with_index  do |game, i| %>
		  <tr>
		    <td class="<%= 'font-weight-bold' if game.participations[0].won %>"><%= game.participations[0].team.title %></td>
		    <td><%= game.participations[0].score %> : <%= game.participations[1].score %></td>
		    <td class="<%= 'font-weight-bold' if game.participations[1].won %>"><%= game.participations[1].team.title%></td>
		    <td>
	    	<% if !game.played %>
	    		<%= button_to('play', edit_game_path(game), method: :get, class: "btn btn-info") %></td>
	    	<% end %>
		  </tr>
		<% end %>
	<% else %>
		<% size.times do %>
			<tr>
			    <td><i>To be determined</i></td>
			    <td class="text-center">:</td>
			    <td><i>To be determined</i></td>
			  </tr>
		<% end %>
	<% end %>
  </tbody>
</table>